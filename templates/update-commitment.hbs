<div id="update-commitment">
    <h1>Update Commitments</h1>
    <button><a href="/commitments">Back</a></button>

    <h2>Update</h2>
    <form id="add-commitment-form" method="POST">
        <div class="form-group">
            <label for="commitmentId">Commitment ID</label>
            <input class="form-control" id="commitmentId" name="commitmentId" required>
            <label for="name">Name</label>
            <input class="form-control" id="name" name="name">
            <label for="date">Date</label>
            <input class="form-control" id="date" name="date" type="date" >
            <label for="time-start">Start</label>
            <input class="form-control" id="time-start" name="timeStart" type="time" >
            <label for="time-end">End</label>
            <input class="form-control" id="time-end" name="timeEnd" type="time" >
            <label for="Location">Location</label>
            <input class="form-control" id="location" name="location" >
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>



    <table style="width:100%">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Time Start</th>
            <th>Time End</th>
            <th>Location</th>
        </tr>
        {{#each data}}
            <tr>
                <td>{{this.commitmentid}}</td>
                <td>{{this.name}}</td>
                <td>{{this.date}}</td>
                <td>{{this.timestart}}</td>
                <td>{{this.timeend}}</td>
                <td>{{this.location}}</td>
            </tr>
        {{/each}}
    </table>


</div>

