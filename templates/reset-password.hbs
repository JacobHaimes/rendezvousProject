<div id="reset-password-page">
    <div class="row">
        <div class="col-8">
            <reset-password-static-heading></reset-password-static-heading>

            <instructions details="Reset Password for our cool web site."></instructions>

            <div v-if="errors.length">
                <h2>There are errors on this form:</h2>
                <error-msge
                        v-for="(error, idx) in errors"
                        v-bind:severity="error.severity"
                        v-bind:msge="error.msge"
                        v-bind:key="idx + 1">
                </error-msge>
            </div>

            <form id="reset-password-form" method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" id="password" name="password"
                           type="password" placeholder="Non-trivial password"
                           v-model="password" required>
                </div>
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input class="form-control" id="newPassword" name="newPassword"
                           type="password" placeholder="New Non-trivial password"
                           v-model="newPassword" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input class="form-control" id="confirmPassword" name="confirmPassword"
                           type="password" placeholder="Confirm New Non-trivial password"
                           v-model="confirmPassword" required>
                </div>
                <input class="btn btn-primary" id="submitButton" type="submit" value="Reset Password">
            </form>
        </div>
        <div class="col-4">
            <h2>Cheat Sheet</h2>
            <ul>
                <li>Password: \{{ password }}</li>
                <li>New Password: \{{ newPassword }}</li>
                <li>Confirm Password: \{{ confirmPassword }}</li>
            </ul>
        </div>
    </div>
</div>

<script src="/public/reset-password.js"></script>
